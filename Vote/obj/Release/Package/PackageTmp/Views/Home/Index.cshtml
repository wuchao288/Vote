@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" id="viewport" name="viewport"> 
    <style>
        body {
            background-image: url(/img/00.jpg);
            background-size: cover;
        }
        .top {
            margin-top: 20%;
            color: white;
            text-align: center;
            font-size: 1.5em;
            /*text-shadow: 0px 0px 9px #000000;*/
        }
        .top p {
            margin: 0px;
            padding: 0px;
            margin-top: 20px;
        }
        .action {
            padding-top: 80px;
            text-align: center;
        }
        .action input[type="text"] {
            background: #4BC9FB;
            width: 60%;
            border: none;
            height: 50px;
            color: white;
            margin-top: 5px;
            padding: 0 20px 0 20px;
            border: #EBF8FE 1px solid;
            border-radius: 5px;
            margin-bottom: 10px;
        }
            .action input[type="submit"] {
                -webkit-appearance: none;
                background: #509506;
                width: 73%;
                border: none;
                height: 45px;
                line-height: 45px;
                font-size: 1.2em;
                color: white;
                margin-top: 10px;
                padding: 0 20px 0 20px;
                border-radius: 5px;
            }
    </style>
    <script>
        @Html.Raw(ViewBag.mag)
        function Store() {
            var value = document.getElementById("vscode").value;
            localStorage.setItem("vscode", value);//存储数据 
        }
    </script>
</head>
<body>
    <div class="top">
        <p>湖南省医师协会</p>
        <p>血液科医师分会第一届年会</p>
    </div>
    <div class="action">
        <form action="/home/Index" method="post" onsubmit="Store()">
            <input type="text" id="vscode" name="vscode" placeholder="请输入识别码" />
            <br />
            <input type="submit" value="确&nbsp;&nbsp;&nbsp;&nbsp;定" />
        </form>
    </div>
</body>
</html>
<script>
    document.getElementById("vscode").value = localStorage.getItem("vscode");
</script>
